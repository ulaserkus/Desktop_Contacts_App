<Window x:Class="DesktopContactsApp.contactDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopContactsApp"
        mc:Ignorable="d"
        WindowStyle="None"
        ResizeMode="NoResize"
        Title="contactDetailsWindow" Height="200" Width="300">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Name"></TextBlock>
            <TextBox x:Name="nameTextBox" Margin="0,0,0,5"></TextBox>
            <TextBlock Text="Email"></TextBlock>
            <TextBox x:Name="emailTextBox" Margin="0,0,0,5"></TextBox>
            <TextBlock Text="Phone"></TextBlock>
            <TextBox x:Name="phoneTextBox"  Margin="0,0,0,5"></TextBox>

            <Button Click="updateButton_Click" Content="Update" x:Name="updateButton"></Button>
            <Button Click="deleteButton_Click" Content="Delete" x:Name="deleteButton" Margin="0 5 0 0" Background="Red" Foreground="White"></Button>
        </StackPanel>

    </Grid>
</Window>
